@model IEnumerable<ConversationPlanner.Models.ConversationListItemViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="GenerateNewRound">
            <div class="form-group">
                <input class="form-control" type="datetime-local" id="timestamp" name="timestamp"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate new round" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Participant1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participant2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@item.CssStyle">
                <td>
                    @Html.DisplayFor(modelItem => item.Participant1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Participant2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
